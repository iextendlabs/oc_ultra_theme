{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-header-text">{{ entry_header_text }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_header_text" value="{{ module_header_text }}" placeholder="{{ entry_header_text }}" id="input-header-text" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-header-text-color">{{ entry_header_text_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_header_text_color" value="{{ module_header_text_color }}" placeholder="{{ entry_header_text_color }}" id="input-header-text-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="icon-contact-number-color">{{ entry_contact_number_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_header_contact_number_color" value="{{ module_header_contact_number_color }}" placeholder="{{ entry_contact_number_color }}" id="icon-contact-number-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="icon-header-background-color">{{ entry_header_background_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_header_background_color" value="{{ module_header_background_color }}" placeholder="{{ entry_header_background_color }}" id="icon-header-background-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="icon-header-link-color">{{ entry_header_link_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_header_link_color" value="{{ module_header_link_color }}" placeholder="{{ entry_header_link_color }}" id="icon-header-link-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="icon-header-link-hover-color">{{ entry_header_link_hover_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_header_link_hover_color" value="{{ module_header_link_hover_color }}" placeholder="{{ entry_header_link_hover_color }}" id="icon-header-link-hover-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="icon-header-menu-color">{{ entry_header_menu_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_header_menu_color" value="{{ module_header_menu_color }}" placeholder="{{ entry_header_menu_color }}" id="icon-header-menu-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="icon-header-menu-hover-color">{{ entry_header_menu_hover_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_header_menu_hover_color" value="{{ module_header_menu_hover_color }}" placeholder="{{ entry_header_menu_hover_color }}" id="icon-header-menu-hover-color" class="form-control"/>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}