{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_ocUltra_theme_setting_status" id="input-status" class="form-control">
                {% if module_ocUltra_theme_setting_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-home-page-heading1">{{ entry_home_page_heading1 }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_home_page_heading1" value="{{ module_home_page_heading1 }}" placeholder="{{ entry_home_page_heading1 }}" id="input-home-page-heading1" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-home-page-heading1-data">{{ entry_heading1_data }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_home_page_heading1_data" value="{{ module_home_page_heading1_data }}" placeholder="{{ entry_heading1_data }}" id="input-home-page-heading1-data" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-home-page-heading1-icon">{{ entry_heading1_icon }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_home_page_heading1_icon" value="{{ module_home_page_heading1_icon }}" placeholder="{{ entry_heading1_icon }}" id="input-home-page-heading1-icon" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-home-page-heading2">{{ entry_home_page_heading2 }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_home_page_heading2" value="{{ module_home_page_heading2 }}" placeholder="{{ entry_home_page_heading2 }}" id="input-home-page-heading2" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-home-page-heading2-data">{{ entry_heading2_data }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_home_page_heading2_data" value="{{ module_home_page_heading2_data }}" placeholder="{{ entry_heading2_data }}" id="input-home-page-heading2-data" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-home-page-heading2-icon">{{ entry_heading2_icon }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_home_page_heading2_icon" value="{{ module_home_page_heading2_icon }}" placeholder="{{ entry_heading2_icon }}" id="input-home-page-heading2-icon" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-home-page-heading3">{{ entry_home_page_heading3 }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_home_page_heading3" value="{{ module_home_page_heading3 }}" placeholder="{{ entry_home_page_heading3 }}" id="input-home-page-heading3" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-home-page-heading3-data">{{ entry_heading3_data }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_home_page_heading3_data" value="{{ module_home_page_heading3_data }}" placeholder="{{ entry_heading3_data }}" id="input-home-page-heading3-data" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-home-page-heading3-icon">{{ entry_heading3_icon }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_home_page_heading3_icon" value="{{ module_home_page_heading3_icon }}" placeholder="{{ entry_heading3_icon }}" id="input-home-page-heading3-icon" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="icon-color">{{ entry_icon_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_home_page_icon_color" value="{{ module_home_page_icon_color }}" placeholder="{{ entry_icon_color }}" id="icon-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="headings-color">{{ entry_headings_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_home_page_headings_color" value="{{ module_home_page_headings_color }}" placeholder="{{ entry_headings_color }}" id="headings-color" class="form-control"/>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}